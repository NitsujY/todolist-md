  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "prod": "npm run build && npm run preview",
    "reminders:sync": "tsx scripts/reminders-sync-linked.ts"
  },
  "dependencies": {
