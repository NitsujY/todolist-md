{
  "name": "todolist-md",
  "private": true,
  "version": "0.1.2",
  "type": "module",
  "description": "Markdown-first todo app designed for humans and AI agents. Clawdbot-powered task automation with GFM task lists.",
  "keywords": [
    "clawdbot",
    "ai-agent",
    "llm-friendly",
    "markdown-todo",
    "task-automation",
    "gfm-tasks",
    "agent-ready",
    "autonomous-agent",
    "devops-automation",
    "plaintext-productivity",
    "file-based-workflow",
    "todo-app",
    "markdown",
    "typescript",
    "react",
    "vite"
