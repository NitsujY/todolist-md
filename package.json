    "remark-gfm": "^4.0.1",
    "remark-parse": "^11.0.0",
    "remark-stringify": "^11.0.0",
    "undici": "^5.29.0",
    "unified": "^11.0.5",
    "zundo": "^2.3.0",
    "zustand": "^5.0.8"
